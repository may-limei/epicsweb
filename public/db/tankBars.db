record(calc, "$(user):calcTo100")
{
	field(DESC, "Counter from 0 to 100")
	field(SCAN,".2 second")
	field(CALC, "(A<B)?(A+C):D")
	field(INPA, "$(user):calcTo100.VAL NPP NMS")
	field(INPB, "100")
	field(INPC, "1")
	field(INPD, "0")
	field(EGU, "Counts")
	field(HOPR, "10")
	field(HIHI, "8")
	field(HIGH, "6")
	field(LOW, "4")
	field(LOLO, "2")
	field(HHSV, "MAJOR")
	field(HSV, "MINOR")
	field(LSV, "MINOR")
	field(LLSV, "MAJOR")
}

