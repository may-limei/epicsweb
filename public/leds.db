record(calc, "$(user):led$(no)")
{
	field(DESC, "Counter from 0 to 1")
	field(SCAN, "$(scan)")
	field(CALC, "(A<1)?1:0")
	field(INPA, "$(user):led$(no).VAL NPP NMS")
	field(EGU, "Counts")
	field(HOPR, "10")
	field(HIHI, "8")
	field(HIGH, "6")
	field(LOW, "4")
	field(LOLO, "2")
	field(HHSV, "MAJOR")
	field(HSV, "MINOR")
	field(LSV, "MINOR")
	field(LLSV, "MAJOR")
}

record(calc, "$(user):led4")
{
	field(DESC, "Counter from 0 to 255")
	field(SCAN, ".5 second")
	field(CALC, "(A<256)?A+B:0")
	field(INPA, "$(user):led4.VAL NPP NMS")
      field(INPB, "1")
	field(EGU, "Counts")
	field(HOPR, "10")
	field(HIHI, "8")
	field(HIGH, "6")
	field(LOW, "4")
	field(LOLO, "2")
	field(HHSV, "MAJOR")
	field(HSV, "MINOR")
	field(LSV, "MINOR")
	field(LLSV, "MAJOR")
}

